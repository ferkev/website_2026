---
import { Aside } from "../components/Aside/Aside";
import { Header } from "../components/Header/Header";
import { Hero } from "../components/Hero/Hero";
import "../styles/global.css";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>KLF - developer</title>
	</head>
	<body>
		<div class="container flex flex-col justify-center items-center mx-auto">
		<Header 
			 name="Kevin LE FRANC"
			 jobTitle="Freelance Web Developer"
			 skills={["React", "TypeScript", "Astro"]}
			 contact={{
				email:"",
				phone:"",
				location:""
			 }}
		/>
		<slot />
		</div>
	</body>

	</body>
</html>

<style>

	:root {
		/* Smooth palette */
		--bg: #f6f7fb;
		--card: rgba(255, 255, 255, 0.78);
		--text: #0f172a;
		--muted: #64748b;
		--line: rgba(15, 23, 42, 0.1);

		--accentA: #5eead4; /* mint */
		--accentB: #60a5fa; /* soft blue */
		--accentC: #a78bfa; /* lavender */

		--radius: 18px;
		--shadow: 0 18px 55px rgba(15, 23, 42, 0.1);
		--max: 1120px;
  }

	* {
			box-sizing: border-box;
		}
	html {
		scroll-behavior: smooth;
	}
	body {
		min-height: 100dvh;
		margin: 0;
		font-family:
			ui-sans-serif,
			system-ui,
			-apple-system,
			Segoe UI,
			Roboto,
			Arial;
		color: var(--text);
		line-height: 1.55;
		background:
			radial-gradient(
				900px 520px at 14% 10%,
				rgba(94, 234, 212, 0.22),
				transparent 60%
			),
			radial-gradient(
				900px 520px at 85% 12%,
				rgba(96, 165, 250, 0.22),
				transparent 60%
			),
			radial-gradient(
				900px 520px at 50% 95%,
				rgba(167, 139, 250, 0.18),
				transparent 60%
			),
			var(--bg);
		background-repeat: no-repeat;
	}
</style>
